{
    "name": "hinchk/scheduleguru",
    "description": "Laravel 4 Smart Schedule System",
    "keywords": ["laravel", "scheduleguru"],
    "license": "MIT",
    "authors": [
        {
            "name": "Kasey Hinchman",
            "homepage": "http://www.testprepgurus.com"
        }
    ],
    "require": {
        "laravel/framework": "4.2.*",
        "zizaco/confide": "~3.2",
        "zizaco/entrust": "~1.2",
        "bllim/datatables": "~1.3",
        "google/apiclient": "1.0.*@beta",
        "adamwathan/eloquent-oauth": "dev-master",
        "atticmedia/anvard": "dev-master"
    },
    "require-dev": {
        "way/generators": "~2.6",
        "phpunit/phpunit": "~4.0",
        "mockery/mockery": "~0.9",
        "summerstreet/woodling": "~0.1.6",
        "barryvdh/laravel-ide-helper": "~1.11",
        "barryvdh/laravel-debugbar": "1.*"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/library",
            "app/models",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/library"
        ]
    },
    "scripts": {
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-install-cmd": [
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan ide-helper:generate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
