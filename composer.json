{
    "name": "hinchk/scheduleguru",
    "description": "Laravel 4 Smart Schedule System",
    "keywords": ["laravel", "scheduleguru"],
    "license": "MIT",
    "authors": [
        {
            "name": "Kasey Hinchman",
            "homepage": "http://www.testprepgurus.com"
        }
    ],
    "require": {
        "laravel/framework": "4.2.*",
        "laracasts/flash": "~1.2",
        "laracasts/presenter": "0.1.*",
        "laracasts/commander": "~1.0",
        "laracasts/utilities": "~1.0",
        "zizaco/confide": "~4.0@dev",
        "zizaco/entrust": "1.2.*@dev",
        "bllim/datatables": "~1.3",
        "google/apiclient": "1.0.*@beta",
        "redbaron76/googlavel": "~1.0",
        "anahkiasen/former": "~3.5"
    },
    "require-dev": {
        "way/generators": "~2.6",
        "phpunit/phpunit": "~4.0",
        "mockery/mockery": "~0.9",
        "summerstreet/woodling": "~0.1.6",
        "barryvdh/laravel-debugbar": "1.*",
        "barryvdh/laravel-ide-helper": "~1.11",
        "leroy-merlin-br/larasniffer": "~1.0"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/library",
            "app/models",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/library"
        ],
        "psr-4": {
            "ScheduleGuru\\": "app/ScheduleGuru"
        }
    },
    "scripts": {
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-install-cmd": [
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan ide-helper:generate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
